                                input(type='text' placeholder='Имя*' style='background-image: url("./assets/img/svg/name.svg")').customer-form__input
                                input(type='tel' placeholder='Телефон*' style='background-image: url("./assets/img/svg/tel.svg")').customer-form__input
                                input(type='email' placeholder='E-mail' style='background-image: url("./assets/img/svg/mail.svg")').customer-form__input
